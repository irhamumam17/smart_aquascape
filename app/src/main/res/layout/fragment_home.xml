<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.home.ui.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="5">
                <TextView
                    android:id="@+id/text_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="@string/smart"
                    android:textColor="#001330"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aquascape"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:textColor="#1d8fd1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/data1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/head">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/circle_layout_height"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle1"
                    android:layout_width="@dimen/circle_height"
                    android:layout_height="@dimen/circle_height"
                    android:src="@drawable/circle_blue_wave"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 NTU"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:text="Kekeruhan Air"
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/circle_text_size"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/circle1"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/circle_layout_height"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle2"
                    android:layout_width="@dimen/circle_height"
                    android:layout_height="@dimen/circle_height"
                    android:src="@drawable/circle_blue_wave"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22\u2103"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:text="Suhu Air"
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/circle_text_size"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/circle2"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/data1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/circle_layout_height"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle3"
                    android:layout_width="@dimen/circle_height"
                    android:layout_height="@dimen/circle_height"
                    android:src="@drawable/circle_red_wave"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:text="PH Air"
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/circle_text_size"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/circle3"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/circle_layout_height"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle4"
                    android:layout_width="@dimen/circle_height"
                    android:layout_height="@dimen/circle_height"
                    android:src="@drawable/circle_yellow_wave"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10cm"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:text="Level Air"
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/circle_text_size"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/circle4"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txtKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/data2"
            android:text="Keterangan :"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtKeterangan">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:padding="5sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="#ff5757"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:padding="5sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="#38b6ff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:padding="5sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="#ffde59"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtRiwayat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/ket"
            android:text="Riwayat Waktu Pemberian Makan :"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TableLayout
            android:id="@+id/table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txtRiwayat1">
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/cell_border"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_border"
                    android:text="Monitoring"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Evaluasi"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/cell_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/cell_data_border"
                    android:text="Waktu"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_data_border"
                    android:text="Terus Menerus"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Periodik"
                    android:textColor="@color/black"
                    android:background="@drawable/cell_data_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Apa Yang Diukur"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Aktivitas Keseharian, sering fokus pada input, proses dan output"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Periodik"
                    android:textColor="@color/black"

                    android:background="@drawable/cell_even_data_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:background="@drawable/cell_data_border"
                    android:text="Siapa yang terlibat"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_data_border"
                    android:text="Pihak internal"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Pihak internal dan eksternal"
                    android:textColor="@color/black"

                    android:background="@drawable/cell_data_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Proses?"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Rapat rutin, laporan setiap bulan"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Rapat khusu, dibutuhkan untuk mengambil data"
                    android:textColor="@color/black"

                    android:background="@drawable/cell_even_data_border"
                    />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/txtRiwayat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/table1"
            android:text="Riwayat Waktu Pemberian Makan :"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TableLayout
            android:id="@+id/table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txtRiwayat2">
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/cell_border"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_border"
                    android:text="Monitoring"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Evaluasi"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/cell_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/cell_data_border"
                    android:text="Waktu"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_data_border"
                    android:text="Terus Menerus"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Periodik"
                    android:textColor="@color/black"
                    android:background="@drawable/cell_data_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Apa Yang Diukur"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Aktivitas Keseharian, sering fokus pada input, proses dan output"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Periodik"
                    android:textColor="@color/black"

                    android:background="@drawable/cell_even_data_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:background="@drawable/cell_data_border"
                    android:text="Siapa yang terlibat"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_data_border"
                    android:text="Pihak internal"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Pihak internal dan eksternal"
                    android:textColor="@color/black"

                    android:background="@drawable/cell_data_border"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Proses?"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_even_data_border"
                    android:text="Rapat rutin, laporan setiap bulan"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Rapat khusu, dibutuhkan untuk mengambil data"
                    android:textColor="@color/black"

                    android:background="@drawable/cell_even_data_border"
                    />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/table2">

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>